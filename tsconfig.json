{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,

        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",

        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "baseUrl": ".",
        "paths": {
            // Need to match aliases in scripts/webpack.config.common
            "@scripts/*": ["./scripts/*"],

            "@common/*": ["./src/common/*"],
            "@cron/*": ["./src/cron/*"],
            "@web/*": ["./src/web/*"],

            "@api/*": ["./src/web/api/*"],
            "@views/*": ["./src/web/views/*"],

            "@css/*": ["./src/web/assets/css/*"],
            "@img/*": ["./src/web/assets/img/*"],
            "@raw/*": ["./src/web/assets/raw/*"],
        },
    },
    "exclude": [
        "node_modules",
        "dist*",
    ],
    "include": [
        "**/*",
        ".eslintrc.js",
    ],
}
